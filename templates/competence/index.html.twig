{% extends 'base.html.twig' %}

{% block title %}Liste des compétences
{% endblock %}

{% block body %}
	<h1>Liste des compétences</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for competence in competences %}
				<tr>
					<td>{{ competence.id }}</td>
					<td>{{ competence.nom }}</td>
					<td>
						<a href="{{ path('competence_show', {'id': competence.id}) }}">Détails</a>
						<a href="{{ path('competence_edit', {'id': competence.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Base de données vide</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('competence_new') }}">Ajouter une compétence</a>
{% endblock %}
