{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12 d-flex justify-content-center">
			<div class="card b-color mt-4 shadow-sm w-25">
				<div class="card-header t-color">
					<h4 class="my-0 font-weight-normal text-center text-white">
						<u>Modification profil</u>
					</h4>
				</div>
				<div class="card-body row">
					<div class="col-12">
						{{form_start(form)}}
						{{form_errors(form)}}

						{{form_row(form.email)}}
						{{form_row(form.lastname)}}
						{{form_row(form.firstname)}}
						{{form_row(form.phoneNumber)}}
						<div class="d-flex w-100 justify-content-center pt-3">
						<button type="submit" class="btn btn-lg btn-block btn-primary w-25 mt-2 mr-3">Modifier</button>
						<a href="{{ path('profil_index', {'id' : formateurs.id}) }}" class="btn btn-lg btn-block btn-primary w-25 ml-3">Retour</a>
						</div>
						{{form_end(form)}}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
