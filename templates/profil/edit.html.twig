{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12 d-flex justify-content-center">
			<div class="card b-color mt-4 shadow-sm w-75">
				<div class="card-header t-color">
					<h4 class="my-0 font-weight-normal text-center text-white">
						<u>Modification profil</u>
					</h4>
				</div>
				<div class="card-body  login__form row">
					<div class="col-12">
						{{form_start(form)}}
						{{form_errors(form)}}
						<div class="form-group input-group">
							<div class="input-group-prepend">
								<span class="input-group-text">
									<i class="fa fa-user"></i>
								</span>
							</div>
							{{ form_widget(form.firstname) }}
						</div>

						<div class="form-group input-group">
							<div class="input-group-prepend">
								<span class="input-group-text">
									<i class="fa fa-user"></i>
								</span>
							</div>
							{{ form_widget(form.lastname) }}
						</div>

						<div class="form-group input-group">
							<div class="input-group-prepend">
								<span class="input-group-text">
									<i class="fa fa-envelope"></i>
								</span>
							</div>
							{{ form_widget(form.email) }}
						</div>

						<div class="form-group input-group">
							<div class="input-group-prepend">
								<span class="input-group-text">
									<i class="fa fa-phone"></i>
								</span>
							</div>
							{{ form_widget(form.phoneNumber) }}
						</div>

						<div class="row col-12">
							<div class="col-md-6 mt-2">
								<button type="submit" class="btn btn-lg btn-block btn-primary">Modifier</button>
							</div>
							<div class="col-md-6 mt-2">
								<a href="{{ path('profil_index', {'id' : formateurs.id}) }}" class="btn btn-lg btn-block btn-primary">Retour</a>
							</div>
						</div>

						{{form_end(form)}}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
