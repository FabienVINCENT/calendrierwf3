{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12 d-flex justify-content-center">
			<div class="card mt-4 shadow-sm w-25">
				<div class="card-header">
					<h4 class="my-0 font-weight-normal text-center">
						<u>Changer de mot de passe</u>
					</h4>
				</div>
				<div class="card-body row">
					<div class="col-12">
						{{form_start(form)}}
						{{form_errors(form)}}

						{{form_row(form.oldPassword)}}
						{{form_row(form.plainPassword)}}
						
						{{form_end(form)}}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}