{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12 d-flex justify-content-center">
			<div class="card b-color mt-4 shadow-sm w-75">
				<div class="card-header t-color">
					<h4 class="my-0 font-weight-normal text-center text-white">
						<u>Fiche Utilisateur</u>
					</h4>
				</div>
				<div class="card-body row">
					<div class="col-md-6">
						<div class="mt-1">
							<strong>
								<u>Nom & Prénom:</u>
							</strong>
							{{formateurs.lastname}}
							{{formateurs.firstname}}</div>
						<div class="mt-1">
							<strong>
								<u>Mail:</u>
							</strong>
							{{ formateurs.email }}</div>
						<div class="mt-1">
							<strong>
								<u>Téléphone:</u>
							</strong>
							{{ formateurs.phoneNumber }}</div>
						<div class="mt-1">
							<strong>
								<u>Compétences:</u>
							</strong>
							{% for talent in formateurs.talents %}
								{{ talent.nom }}
							{% endfor %}
						</div>
					</div>
					<div class="col-md-6">
						<div class="mt-3 mt-md-0">
							<h4 class="my-0 font-weight-normal text-center">
								<u>Formations en cours:</u>
							</h4>
							<ul>
								{% for animer in formateurs.animers %}
									<li>{{ animer.date|date("m/d/Y") }}
										:
										{{ animer.fkAnimerFormation.nom }}</li>
								{% endfor %}
							</ul>
						</div>
					</div>
					<div class="row col-12">
						<div class="col-md-6 mt-2">
							<a href="{{ path('profil_edit', {'id' : formateurs.id}) }}" class="btn btn-lg btn-block btn-primary">Modifier</a>
						</div>
						<div class="col-md-6 mt-2">
							<a href="{{ path('profil_reset', {'id' : formateurs.id}) }}" class="btn btn-lg btn-block btn-primary">Changer mot de passe</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
