        <thead>
            <tr>
                <th>Id</th>
                <th>Ville</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for endroit in endroits %}
            <tr>
                <td>{{ endroit.id }}</td>
                <td>{{ endroit.ville }}</td>
